<Window Name="createCoord"  x:Class="Esoft.Windows.CreateCoord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Esoft.Windows"
        mc:Ignorable="d"
        Title="CreateAddress" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Долгота"/>
            <Label Content="Широта" Margin="1"/>
        </StackPanel>

        <StackPanel Margin="10" Grid.Column="1">
            <TextBox Name="Longitude" Margin="5"/>
            <TextBox Name="Latitude" Margin="5"/>
            <Button Content="Добавить" Name="BtnAddCoord" Click="BtnAddCoord_Click"/>
        </StackPanel>
    </Grid>
</Window>
